    <div class="col-lg-4">

        <div class="product-item">
            <div class="pi-img-wrapper">
                <img src="@Model.Image" class="img-responsive" alt="@Model.Imagedescription">
                <div>
                    <a href="#" class="btn">Zoom</a>
                    <a href="#" class="btn">View</a>
