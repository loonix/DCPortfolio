                @Html.ActionLink("Edit", "Edit", new { id = Model.PortfolioId })

            </p>
            <dt>
                Category
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Categories.Name)
            </dd>
        </div>

       
        
    </div>
    <div class="col-lg-8">
        <div class="product-desc">
           <h2>@Html.DisplayFor(model => model.Title)</h2>
                <p>@Html.DisplayFor(model => model.Description)</p>
                <br>
                <p>@Html.Raw(Model.pContent)</p>
                <p>Author: @Html.DisplayFor(model => model.Users.Name)</p>
                </div>

    </div>



</div>

