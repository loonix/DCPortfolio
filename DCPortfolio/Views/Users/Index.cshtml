@model IEnumerable<DCPortfolio.Users>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table-container table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bio)
        </td>
        <td>
           
            @Html.ActionLink(" ", "Edit", new { id = item.UserId }, new { @class = "fa fa-pencil fa-2 btn btn-default" })
            @Html.ActionLink(" ", "Details", new { id = item.UserId }, new { @class = "fa fa-eye fa-2 btn btn-default" })
            @Html.ActionLink(" ", "Delete", new { id = item.UserId }, new { @class = "fa fa-trash-o fa-2 btn btn-default" })
        </td>
    </tr>
}

</table>
